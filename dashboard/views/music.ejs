<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Roxy+ Music</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        .music-container {
            width: 95%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            color: #fff;
            padding-bottom: 100px;
        }

        /* Layout Grid */
        .music-grid {
            display: grid;
            grid-template-columns: 1fr 350px;
            gap: 30px;
        }

        /* Player Card */
        .player-card {
            background: rgba(19, 19, 26, 0.7);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 24px;
            padding: 40px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            height: 100%;
            min-height: 500px;
            position: relative;
            overflow: hidden;
        }

        /* Guild Badge */
        .guild-badge {
            position: absolute;
            top: 20px;
            left: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
            background: rgba(0, 0, 0, 0.4);
            padding: 8px 15px;
            border-radius: 30px;
        }

        .guild-icon {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            object-fit: cover;
        }

        .guild-info {
            font-size: 0.9rem;
            font-weight: 500;
            color: #ccc;
        }

        .channel-name {
            color: var(--neon-purple);
            font-weight: 700;
            margin-left: 5px;
        }

        /* Album Art */
        .art-wrapper {
            width: 280px;
            height: 280px;
            margin-bottom: 30px;
            position: relative;
        }

        .track-art {
            width: 100%;
            height: 100%;
            border-radius: 20px;
            object-fit: cover;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
            transition: transform 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        .track-art.playing {
            transform: scale(1.05);
            box-shadow: 0 15px 50px rgba(138, 43, 226, 0.4);
        }

        /* Track Info */
        .track-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 5px;
            max-width: 90%;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            background: linear-gradient(to right, #fff, #a29bfe);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .track-artist {
            font-size: 1.1rem;
            color: #888;
            margin-bottom: 30px;
            font-weight: 400;
        }

        /* Progress Bar */
        .progress-wrapper {
            width: 100%;
            max-width: 500px;
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 30px;
        }

        .time-text {
            font-size: 0.85rem;
            color: #aaa;
            font-family: monospace;
            min-width: 45px;
        }

        .progress-container {
            flex: 1;
            height: 6px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            position: relative;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, var(--neon-purple), #a29bfe);
            width: 0%;
            border-radius: 10px;
            transition: width 0.5s linear;
            box-shadow: 0 0 10px var(--neon-purple);
        }

        /* Controls */
        .btn-stop {
            background: rgba(255, 71, 87, 0.1);
            color: #ff4757;
            border: 1px solid rgba(255, 71, 87, 0.3);
            padding: 12px 30px;
            border-radius: 12px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .btn-stop:hover {
            background: #ff4757;
            color: white;
            box-shadow: 0 5px 15px rgba(255, 71, 87, 0.4);
        }

        /* Queue Side */
        .queue-card {
            background: rgba(19, 19, 26, 0.8);
            border-radius: 20px;
            padding: 25px;
            border: 1px solid rgba(255, 255, 255, 0.05);
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .queue-header {
            font-size: 1.2rem;
            font-weight: 700;
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding-bottom: 15px;
        }

        .queue-list {
            overflow-y: auto;
            flex: 1;
            padding-right: 5px;
            max-height: 500px;
        }

        .queue-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px;
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.02);
            margin-bottom: 8px;
            transition: 0.2s;
        }

        .queue-item:hover {
            background: rgba(255, 255, 255, 0.05);
        }

        .q-number {
            color: #555;
            font-size: 0.8rem;
            font-weight: bold;
            width: 20px;
        }

        .q-info {
            flex: 1;
            overflow: hidden;
        }

        .q-title {
            font-size: 0.9rem;
            font-weight: 600;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            color: #ddd;
        }

        .q-author {
            font-size: 0.8rem;
            color: #777;
        }

        /* Empty State */
        .empty-state {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background: #000;
            z-index: 10;
        }

        .empty-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.3;
        }

        .empty-text {
            font-size: 1.2rem;
            color: #555;
        }

        @media(max-width: 900px) {
            .music-grid {
                grid-template-columns: 1fr;
            }

            .queue-list {
                max-height: 300px;
            }
        }
    </style>
</head>

<body>
    <div class="music-container">

        <div id="noMusicOverlay" class="empty-state" style="display: none;">
            <div class="empty-icon">üéµ</div>
            <div class="empty-text">Nothing is playing right now.</div>
            <div style="margin-top:10px; font-size:0.9rem; color:#444;">Join a voice channel and play some tunes!</div>
        </div>

        <div class="music-grid" id="musicContent">

            <!-- Main Player -->
            <div class="player-card">
                <div class="guild-badge">
                    <img id="guildIcon" src="" class="guild-icon">
                    <div class="guild-info">
                        <span id="guildName">Guild</span> ‚Ä¢ <span id="channelName" class="channel-name">#General</span>
                    </div>
                </div>

                <div class="art-wrapper">
                    <img id="trackCover" src="" class="track-art playing">
                </div>

                <h1 id="trackTitle" class="track-title">Loading...</h1>
                <div id="trackArtist" class="track-artist">Please wait</div>

                <div class="progress-wrapper">
                    <div id="currTime" class="time-text">0:00</div>
                    <div class="progress-container">
                        <div id="progressBar" class="progress-fill"></div>
                    </div>
                    <div id="totalTime" class="time-text">0:00</div>
                </div>

                <button class="btn-stop" onclick="stopMusic()">
                    ‚èπ Stop Music
                </button>
            </div>

            <!-- Queue -->
            <div class="queue-card">
                <div class="queue-header">
                    <span>Up Next</span>
                    <span id="queueCount"
                        style="background:var(--neon-purple); padding:2px 8px; border-radius:6px; font-size:0.8rem;">0</span>
                </div>
                <div id="queueList" class="queue-list">
                    <!-- Items -->
                </div>
            </div>

        </div>

    </div>

    <%- include('partials/super_button') %>

        <script>
            function formatTime(ms) {
                const totalSeconds = Math.floor(ms / 1000);
                const minutes = Math.floor(totalSeconds / 60);
                const seconds = totalSeconds % 60;
                return `${minutes}:${seconds.toString().padStart(2, '0')}`;
            }

            async function updateState() {
                try {
                    const res = await fetch('/api/music/status');
                    const data = await res.json();

                    if (!data.isPlaying || !data.nowPlaying) {
                        document.getElementById('noMusicOverlay').style.display = 'flex';
                        document.getElementById('musicContent').style.opacity = '0.1'; // Fade out bg
                        return;
                    }

                    // Hide empty state
                    document.getElementById('noMusicOverlay').style.display = 'none';
                    document.getElementById('musicContent').style.opacity = '1';

                    // Update Info
                    document.getElementById('guildName').innerText = data.guildName;
                    document.getElementById('channelName').innerText = data.channelName || 'Voice Channel';
                    document.getElementById('guildIcon').src = data.guildIcon || 'https://cdn.discordapp.com/embed/avatars/0.png';

                    document.getElementById('trackTitle').innerText = data.nowPlaying.title;
                    document.getElementById('trackArtist').innerText = data.nowPlaying.author;
                    document.getElementById('trackCover').src = data.nowPlaying.cover;

                    // Progress
                    const percent = Math.min(100, (data.position / data.duration) * 100);
                    document.getElementById('progressBar').style.width = percent + '%';
                    document.getElementById('currTime').innerText = formatTime(data.position);
                    document.getElementById('totalTime').innerText = formatTime(data.duration);

                    // Queue
                    document.getElementById('queueCount').innerText = data.queueCount;
                    const list = document.getElementById('queueList');
                    list.innerHTML = '';

                    if (data.queue.length === 0) {
                        list.innerHTML = '<div style="text-align:center; color:#555; margin-top:50px;">Queue is empty</div>';
                    } else {
                        data.queue.forEach((song, i) => {
                            list.innerHTML += `
                        <div class="queue-item">
                            <div class="q-number">${i + 1}</div>
                            <div class="q-info">
                                <div class="q-title">${song.title}</div>
                                <div class="q-author">${song.author}</div>
                            </div>
                        </div>`;
                        });
                    }

                } catch (e) {
                    console.error(e);
                }
            }

            async function stopMusic() {
                if (!confirm('Stop playback and disconnect?')) return;
                await fetch('/api/music/stop', { method: 'POST' });
                updateState(); // Refresh immediately
            }

            // Start polling
            setInterval(updateState, 2000);
            updateState();
        </script>
</body>

</html>