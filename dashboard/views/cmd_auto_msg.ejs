<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Auto Message - Roxy+</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        * {
            box-sizing: border-box;
        }

        .main-container {
            width: 95%;
            max-width: 1000px;
            margin: 0 auto;
            padding: 40px 20px 100px;
            display: none;
            opacity: 0;
        }

        .page-loaded .main-container {
            display: block;
            animation: fadeIn 0.5s forwards;
        }

        @keyframes fadeIn {
            to {
                opacity: 1;
            }
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
        }

        .header h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
            background: linear-gradient(135deg, #fff, #a29bfe);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .section-card {
            background: #111116;
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 25px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        .section-title {
            font-size: 1.2rem;
            margin-bottom: 20px;
            color: #a29bfe;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding-bottom: 10px;
        }

        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        .input-group {
            margin-bottom: 15px;
        }

        .input-label {
            display: block;
            margin-bottom: 8px;
            color: #ccc;
            font-size: 0.9rem;
            font-weight: 600;
        }

        .input-field {
            width: 100%;
            padding: 12px;
            background: #050508;
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: #fff;
            border-radius: 10px;
            outline: none;
            transition: 0.3s;
        }

        .input-field:focus {
            border-color: #8a2be2;
            box-shadow: 0 0 15px rgba(138, 43, 226, 0.2);
        }

        .btn-add {
            width: 100%;
            padding: 15px;
            font-size: 1.1rem;
            font-weight: 700;
            background: linear-gradient(90deg, #8a2be2, #6c5ce7);
            border: none;
            border-radius: 12px;
            color: #fff;
            cursor: pointer;
            transition: 0.3s;
            box-shadow: 0 5px 20px rgba(138, 43, 226, 0.3);
            margin-top: 10px;
        }

        .btn-add:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(138, 43, 226, 0.5);
        }

        .btn-add:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            transform: none;
        }

        .msg-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #1a1a20;
            padding: 15px;
            border-radius: 12px;
            margin-bottom: 10px;
            border: 1px solid rgba(255, 255, 255, 0.05);
            gap: 15px;
        }

        .msg-info {
            flex-grow: 1;
            overflow: hidden;
        }

        .msg-title {
            font-weight: bold;
            color: #a29bfe;
            margin-bottom: 5px;
            font-size: 1.0rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .msg-detail {
            color: #ccc;
            font-size: 0.9rem;
            white-space: pre-wrap;
            opacity: 0.8;
            max-height: 40px;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .msg-meta {
            font-size: 0.8rem;
            color: #666;
            margin-top: 4px;
        }

        .btn-delete {
            background: rgba(231, 76, 60, 0.2);
            color: #e74c3c;
            border: 1px solid rgba(231, 76, 60, 0.3);
            padding: 8px 15px;
            border-radius: 8px;
            cursor: pointer;
            transition: 0.2s;
            flex-shrink: 0;
        }

        .btn-delete:hover {
            background: #e74c3c;
            color: white;
        }

        .back-btn {
            position: absolute;
            top: 30px;
            left: 30px;
            z-index: 1000;
            color: rgba(255, 255, 255, 0.5);
            text-decoration: none;
            font-size: 1rem;
            display: flex;
            align-items: center;
            gap: 5px;
            transition: 0.3s;
        }

        .back-btn:hover {
            color: #fff;
        }

        .channel-preview {
            display: flex;
            align-items: center;
            gap: 15px;
            background: #15151a;
            padding: 10px;
            border-radius: 10px;
            margin: 10px 0;
            border: 1px solid #8a2be2;
            animation: slideDown 0.3s ease;
        }

        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .cp-icon {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            object-fit: cover;
            background: #333;
        }

        .cp-info {
            display: flex;
            flex-direction: column;
        }

        .cp-name {
            font-weight: bold;
            color: #fff;
            font-size: 0.9rem;
        }

        .cp-sub {
            font-size: 0.75rem;
            color: #aaa;
        }

        @media(max-width: 768px) {
            .form-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>

<body class="page-loaded">

    <a href="/commands" class="back-btn">‚Üê Back</a>

    <div class="main-container">
        <div class="header">
            <h1>Auto Msg</h1>
            <p>Schedule automated messages for specific channels.</p>
            <div
                style="background: rgba(231, 76, 60, 0.1); border: 1px solid rgba(231, 76, 60, 0.3); color: #e74c3c; padding: 10px; border-radius: 8px; margin-top: 15px; font-size: 0.85rem; max-width: 600px; margin-left: auto; margin-right: auto;">
                <i class="fas fa-exclamation-triangle"></i> <strong>WARNING:</strong> Sending automated messages
                repeatedly can get your account banned. Use this feature at your own risk. We are not responsible for
                any consequences.
            </div>
        </div>

        <!-- Add New Config -->
        <div class="section-card">
            <div class="section-title">Schedule New Message</div>

            <div class="input-group">
                <label class="input-label">Channel ID</label>
                <input type="text" id="channelId" class="input-field" placeholder="Channel ID..."
                    oninput="validateChannel()">
                <div id="channelPreview" style="display:none; margin-top:5px;"></div>
            </div>

            <div class="form-grid">
                <div class="input-group">
                    <label class="input-label">Interval Value</label>
                    <input type="number" id="intervalVal" class="input-field" placeholder="e.g. 10" min="1">
                </div>
                <div class="input-group">
                    <label class="input-label">Interval Unit</label>
                    <select id="intervalUnit" class="input-field">
                        <option value="second">Seconds</option>
                        <option value="minute" selected>Minutes</option>
                        <option value="hour">Hours</option>
                        <option value="day">Days</option>
                    </select>
                </div>
            </div>

            <div class="input-group">
                <label class="input-label">Message Content</label>
                <textarea id="messageContent" class="input-field" placeholder="Type your message here..."
                    style="resize: vertical; min-height: 100px; font-family: inherit;"></textarea>
            </div>

            <button id="btnSave" class="btn-add" disabled onclick="addAutoMsg()">Add Schedule</button>
        </div>

        <!-- List -->
        <div class="section-card">
            <div class="section-title">Active Schedules</div>
            <div id="list">
                <div class="no-items" style="text-align: center; color: #666;">Loading...</div>
            </div>
        </div>
    </div>

    <%- include('partials/super_button') %>

        <script>
            let isChannelValid = false;
            let debounceTimer;

            function validateChannel() {
                clearTimeout(debounceTimer);
                const id = document.getElementById('channelId').value.trim();
                const preview = document.getElementById('channelPreview');
                const btn = document.getElementById('btnSave');

                isChannelValid = false;
                btn.disabled = true;

                if (id.length < 17) {
                    preview.style.display = 'none';
                    return;
                }

                debounceTimer = setTimeout(async () => {
                    preview.style.display = 'block';
                    preview.innerHTML = '<div style="color:#999; font-size:0.9rem;">Verifying...</div>';

                    try {
                        // Reuse generic channel validation or specific mirror one (mirror one checks more perms but VIEW/SEND is what we need)
                        // We can reuse mirror-channel validation with type='target' (checks SEND_MESSAGES)
                        const res = await fetch('/api/validate/mirror-channel', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ id, checkWebhook: false, type: 'target' })
                        });

                        if (res.ok) {
                            const info = await res.json();
                            preview.innerHTML = `
                             <div class="channel-preview">
                                <img src="${info.icon || 'https://cdn.discordapp.com/embed/avatars/0.png'}" class="cp-icon">
                                <div class="cp-info">
                                    <div class="cp-name">#${info.name}</div>
                                    <div class="cp-sub">${info.guildName}</div>
                                </div>
                            </div>
                        `;
                            isChannelValid = true;
                            btn.disabled = false;
                        } else {
                            const err = await res.json();
                            preview.innerHTML = `<div style="color:#e74c3c; padding:5px; font-size:0.9rem;">Error: ${err.error}</div>`;
                        }
                    } catch (e) {
                        preview.innerHTML = `<div style="color:#e74c3c; padding:5px;">Validation Failed</div>`;
                    }
                }, 600);
            }

            async function loadData() {
                try {
                    const res = await fetch('/api/auto-msg');
                    const list = await res.json();
                    render(list);
                } catch (e) {
                    document.getElementById('list').innerHTML = '<div style="color:#e74c3c; text-align:center;">Failed to load.</div>';
                }
            }

            function render(list) {
                const listObj = document.getElementById('list');
                listObj.innerHTML = '';

                if (list.length === 0) {
                    listObj.innerHTML = '<div class="no-items" style="text-align: center; color: #666; font-style: italic;">No active schedules.</div>';
                    return;
                }

                list.forEach(item => {
                    listObj.innerHTML += `
                <div class="msg-item">
                    <div class="msg-info">
                        <div class="msg-title">
                            <i class="fas fa-hashtag"></i> ${item.channelId}
                        </div>
                        <div class="msg-detail">${item.message}</div>
                        <div class="msg-meta"><i class="fas fa-clock"></i> Every ${item.interval} ${item.unit}(s)</div>
                    </div>
                    <button class="btn-delete" onclick="deleteItem('${item.channelId}')">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            `;
                });
            }

            async function addAutoMsg() {
                const channelId = document.getElementById('channelId').value.trim();
                const intervalVal = document.getElementById('intervalVal').value;
                const intervalUnit = document.getElementById('intervalUnit').value;
                const message = document.getElementById('messageContent').value.trim();
                const btn = document.getElementById('btnSave');

                if (!channelId || !intervalVal || !message) return alert('All fields required');

                const originalText = btn.innerText;
                btn.disabled = true;
                btn.innerText = "Saving...";

                try {
                    const res = await fetch('/api/auto-msg', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ action: 'add', channelId, message, interval: intervalVal, unit: intervalUnit })
                    });

                    if (res.ok) {
                        // Success Animation
                        btn.style.background = '#2ecc71';
                        btn.innerText = "Schedule Added!";

                        setTimeout(() => {
                            btn.style.background = ''; // Revert to CSS
                            btn.innerText = originalText;
                            btn.disabled = false; // Re-enable (though fields are cleared, validation will disable it again if typed)
                            validateChannel(); // Re-validate (will likely disable button since field is cleared)
                        }, 1000);

                        // Reset Fields
                        document.getElementById('channelId').value = '';
                        document.getElementById('messageContent').value = '';
                        document.getElementById('intervalVal').value = '';
                        document.getElementById('channelPreview').style.display = 'none';

                        loadData();
                    } else {
                        const err = await res.json();
                        alert('Failed: ' + (err.error || 'Unknown Error'));
                        btn.disabled = false;
                        btn.innerText = originalText;
                    }
                } catch (e) {
                    alert('Error processing request');
                    btn.disabled = false;
                    btn.innerText = originalText;
                }
            }

            async function deleteItem(channelId) {
                if (!confirm('Stop this auto message?')) return;
                try {
                    await fetch('/api/auto-msg', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ action: 'remove', channelId })
                    });
                    loadData();
                } catch (e) { alert('Error'); }
            }

            window.onload = loadData;
        </script>
</body>

</html>